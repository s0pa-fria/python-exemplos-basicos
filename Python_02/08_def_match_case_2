sabor = int(input("Indique o dia da semana: "))

# Função Fim de semana
def sabor_pizza(sabor):
    match sabor:
        case 1:
            return print("Mussarela")
        case 2:
            return print("Calabresa")
        case 3:
            return print("Frano c/ Catupiry")
        case 4:
            return print("Portuguesa")
        case _:
            return print("Sabor inválida.")

